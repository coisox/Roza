//=========================================================== Maklumat Staff: ID 2
[
	{
		"element": "data",
		"source": "SELECT JSON_MERGE(staff_data, '{\"comment\":\"Testing 123\"}')  FROM sample_staff WHERE staff_id = ?",
		"parameterized" : [
			"{{staff_id}}"
		]
	},
	{
		"element": "title",
		"labelbi": "Officer Info",
		"labelbm": "Maklumat Pegawai"
	},
	{
		"element": "text",
		"id": "name",
		"labelbi": "Name",
		"labelbm": "Nama",
		"placeholderbi": "insert name",
		"placeholderbm": "masukkan nama",
		"required" : true,
		"maxlength": 20
	},
	{
		"element": "text",
		"id": "group",
		"labelbi": "Group",
		"labelbm": "Kumpulan",
		"placeholderbi": "insert group",
		"placeholderbm": "masukkan kumpulan",
		"required" : true,
		"maxlength": 20
	},
	{
		"element": "text",
		"id": "position",
		"labelbi": "Position",
		"labelbm": "Jawatan",
		"placeholderbi": "insert position",
		"placeholderbm": "masukkan jawatan",
		"required" : true
	},
	{
		"element": "dropdown",
		"id": "state",
		"lookup": "SELECT lov_data FROM sample_lov WHERE lov_category = 'state'",
		"labelbi": "State",
		"labelbm": "Negeri",
		"onchange": "stateChanged()"
	},
	{
		"element": "dropdown",
		"id": "gender",
		"lookup": "SELECT lov_data FROM sample_lov WHERE lov_category = 'gender'",
		"labelbi": "Gender",
		"labelbm": "Jantina"
	},
	{
		"element": "dropdown",
		"id": "status",
		"labelbi": "Status",
		"labelbm": "Status",
		"lookup": [
			{
				"labelbi": "",
				"labelbm": "",
				"value": ""
			},
			{
				"labelbi": "Permanent",
				"labelbm": "Tetap",
				"value": "T"
			},
			{
				"labelbi": "Contract",
				"labelbm": "Kontrak",
				"value": "K"
			}
		]
	},
	{
		"element": "textarea",
		"id": "comment",
		"labelbi": "Comment",
		"labelbm": "Komen",
		"placeholderbi": "insert comment",
		"placeholderbm": "masukkan komen",
		"required" : true,
		"maxlength" : 255
	},
	{
		"element": "formbutton",
		"onclick": "rozaSubmitPanel({\"file\":\"BL_SampleSubmit.php\"})"
	}
]

